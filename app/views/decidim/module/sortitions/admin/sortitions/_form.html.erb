<div class="card">
  <div class="card-divider">
    <h2 class="card-title"><%= t "sortition.form.title", scope: "decidim.admin" %></h2>
  </div>

  <div class="card-section">
    <div class="row">
      <div class="columns xlarge-4">
        <%= form.select :decidim_proposals_feature_id,
                        features_options(proposal_features),
                        prompt: t("sortition.form.select_proposal_feature", scope: "decidim.admin") %>
      </div>

      <div class="columns xlarge-4">
        <%= form.categories_select :decidim_category_id,
                                   @form.categories,
                                   prompt: t("sortition.form.all_categories", scope: "decidim.admin") %>
      </div>

      <div class="columns xlarge-2">
        <%= form.number_field :target_items, min: 1, step: 1 %>
      </div>

      <div class="columns xlarge-2">
        <%= form.number_field :dice, min: 1, max: 6, step: 1 %>
      </div>
    </div>
  </div>
</div>
