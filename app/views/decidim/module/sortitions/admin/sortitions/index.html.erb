<div class="card">
  <div class="card-divider">
    <h2 class="card-title">
      <%= t(".title") %>
      <div class="button--title">
        <% if can? :create, Decidim::Module::Sortitions::Sortition %>
          <%= link_to t("actions.new", scope: "decidim.module.sortitions.admin", name: t("models.sortition.name", scope: "decidim.module.sortitions.admin")), new_sortition_path, class: 'button tiny button--simple' if can? :manage, current_feature %>
        <% end %>
      </div>
    </h2>
  </div>

  <div class="card-section">
    <div class="table-scroll">
      <table class="table-list">
        <thead>
          <tr>
            <th><%= t("models.sortition.fields.reference", scope: "decidim.module.sortitions.admin") %></th>
            <th><%= t("models.sortition.fields.title", scope: "decidim.module.sortitions.admin") %></th>
            <th><%= t("models.sortition.fields.created_at", scope: "decidim.module.sortitions.admin") %></th>
            <th class="actions"></th>
          </tr>
        </thead>
        <tbody>
          <% sortitions.each do |sortition| %>
          <tr>
            <td><%= sortition.reference %></td>
            <td><%= translated_attribute sortition.title %></td>
            <td><%=l sortition.created_at, format: :short %></td>
            <td class="table-list__actions">
              <%= icon_link_to "eye",
                               sortition_path(sortition),
                               t("actions.show", scope: "decidim.module.sortitions.admin"),
                               class: "action-icon--preview" %>

              <% if can? :destroy, sortition %>
                <%= icon_link_to "pencil",
                                edit_sortition_path(sortition),
                                t("actions.edit", scope: "decidim.module.sortitions.admin"),
                                class: "action-icon--edit" %>
             <% end %>

              <% if can? :destroy, sortition %>
                <%= icon_link_to "circle-x",
                                 confirm_destroy_sortition_path(sortition),
                                 t("actions.destroy", scope: "decidim.module.sortitions.admin"),
                                 class: "action-icon--remove" %>
              <% end %>
            </td>
          </tr>
          <% end %>
        </tbody>
      </table>
      <%= paginate sortitions, theme: "decidim" %>
    </div>
  </div>
</div>
